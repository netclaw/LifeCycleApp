<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fakeActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">


      <TextView
          android:id="@+id/txtv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hello Info"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:layout_marginTop="300px"
          ></TextView>

    <EditText
        android:id="@+id/edtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="600px">

    </EditText>

    <Button
        android:id="@+id/copier"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:text="COPIER"
        android:onClick="onClickCopier"
        ></Button>

    <Button
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:layout_marginTop="90px"
        android:text="Start second fake activity"
        android:onClick="onClickStartsfa"
        ></Button>

    <Button
        android:id="@+id/quitter"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:text="QUITTER"
        android:layout_marginVertical="200px"
        android:onClick="onClickQuitter"
        ></Button>

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>